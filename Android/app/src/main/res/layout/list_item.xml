<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_item"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView android:id="@+id/gender_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp" />

    <TextView android:id="@+id/person_name_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/player_avatar"
        android:layout_toRightOf="@+id/gender_icon"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Person Name" />

    <TextView android:id="@+id/person_worth_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/person_name_textview"
        android:layout_toLeftOf="@+id/player_avatar"
        android:layout_toRightOf="@+id/gender_icon"
        android:textColor="@android:color/black"
        android:text="$Worth" />

    <ImageView android:id="@+id/player_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="2dp"
        android:scaleType="fitCenter" />

</RelativeLayout>